<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"pages", :content_type=>content)%>" method="post" data-resourceType="<%= content %>" accept-charset="utf-8">
  <fieldset id="page_fields">
    <legend> Page </legend>
    <dl>
      <dt>
        <p>Parent: </p>
      </dt>
      <dd class="parent">
        <%- parent_id = @document_fedora.image_part_of_ids.first -%>
        <%- parent = Component.load_instance_from_solr(parent_id)-%>
        <%- title = (!parent.title.nil? && !parent.title.empty? ? parent.title : parent.pid) -%>
        <%= link_to "#{title}", catalog_path(parent_id, :exhibit_id => params[:exhibit_id], :render_search => params[:render_search], :viewing_context => params[:viewing_context], :f => params[:f]) %>
      </dd>
      <dt>
        <%= fedora_field_label("properties", [:name], "Name:") %>
      </dt>
      <dd class="name">
        <%= fedora_text_field(document_fedora,"properties", [:name], :multiple=>false) %>
      </dd>
      <dt>
        <%= fedora_field_label("properties", [:title], "Title:") %>
      </dt>
      <dd class="title">
        <%= fedora_text_field(document_fedora,"properties", [:title], :multiple=>false) %>
      </dd>
    </dl> 
  </fieldset>
</form>


