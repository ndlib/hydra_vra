<% image = edit_images_tag %>
<% image_counter = edit_images_tag_counter %>
<% base_id = "image_#{image_counter}" %>

<li>
  <dl class="image_tag" id="<%= base_id %>">
  <dd>
    <ul>
          <dt class="images">
            <%= fedora_field_label("descMetadata", [:item, :daogrp, {:daoloc => image_counter}, :daoloc_href], "Image:") %>
          </dt>
	  <dd>
	    <%= get_values_from_datastream(@document_fedora,"descMetadata", [:item, :daogrp, {:daoloc => image_counter}, :daoloc_href]) %>
	  </dd>
    </ul>
    <% if ( (params[:action] == "edit" || params[:action] == "create")) %>
        <%= field_selectors_for("descMetadata", [{:image=>image_counter}]) %>  
	<%= link_to("", url_for(:action => "destroy", :controller => "images_tag", :item_id => @document_fedora.pid, :image_counter=>image_counter), :method => :delete, :class => "destructive destroy_image") %>
    <% end %>
  </dd>
  </dl>
</li>
<hr/>
