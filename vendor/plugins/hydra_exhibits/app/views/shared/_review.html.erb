<input class="update_description_display" type="hidden" name="description display" action="<%= asset_path(params[:id],:content_type=>content_type)%>"/>
<dt>
  <%= fedora_field_label("properties", [:review], "Need to Review:") %>
</dt>
<dd class="display">
  <%= custom_radio_button(document_fedora,"properties", [:review], :true=>"Yes")%>
  <%= custom_radio_button(document_fedora,"properties", [:review], :false=>"No")%>
</dd>
<input id="rev" type="hidden" name="display_review_comments" value="<%= url_for(:action=>"review_comments", :controller=>"#{document_fedora.class.to_s.downcase}s")%>" />
<div class="review_comment" data-pid=<%= params[:id] %>>
   <%= render :partial => "shared/review_comments", :locals => {:rev=>get_values_from_datastream(document_fedora, "properties", [:review]).first} %>
</div>

