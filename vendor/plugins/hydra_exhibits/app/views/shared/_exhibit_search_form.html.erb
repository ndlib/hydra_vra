<div>
  <% form_tag catalog_index_path, :method => :get do %>
    <fieldset> 
      <% params[:exhibit_id] ? exhibit_id = params[:exhibit_id] : exhibit_id = params[:id]%>
      <h3><%= link_to("Search Complete Exhibit", catalog_index_path(:exhibit_id=>exhibit_id)) %></h3>
      <%= text_field_tag :q, params[:q], :class => "search-box" %>
      
      <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt]) %>        
      
      <%= submit_tag 'Search', :class=>'button' %>
    </fieldset>
  <% end %>
</div>
