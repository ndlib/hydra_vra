<div class="truncated_content">
  <%- if description.style == "newpage" -%>
    <h3><em>
      <%= link_to_document document, :label=>("Essay: \"#{description.title}\"") %>
    </em></h3>
    <p>
      <%= description.summary %>
      <%= link_to "[Read the complete essay]", catalog_path(description.pid, :viewing_context => "browse") %>
    </p>
  <%- else -%>
    <h3> <em><%= description.title %></em> </h3>
    <span class="heading"> <%= "#{truncate( load_description(description), :length =>150, :ommision => "....")}"%> </span>
    <div class="content"><%= load_description(description) %></div>
   <%- end -%>
</div>
