<div id="facets">
  	
  <%- if sub_collections.any? %>
      <%- sub_collections.each do |genre| -%>
          <h3 class="facet-list<%= ((defined? current) && !current.nil? && current.id == sub_collection.id) ? " current" : "" %>" >
            <%# sub_collection.name%>
            <%= link_to sub_collection.name, collection_sub_collection_path(:id => sub_collection.id, :collection_id => @collection.id) %>
          </h3>
