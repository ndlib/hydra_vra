            <li> <span class="selected"> <%= link_to "All related items", catalog_index_path(:params => {"f[type_facet][]" => sub_collection.name}) %> </span> </li>
          </ul>
        <%- end -%>
      <%- end -%>     
  <%- end -%>
</div>



