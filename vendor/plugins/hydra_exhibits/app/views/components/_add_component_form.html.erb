<%- parent_id = params[:id] unless parent_id -%>
<%- parent_content_type = "component" unless parent_content_type -%>
<% form_tag(components_path(:content_type => "component", :exhibit_id => params[:exhibit_id], :render_search => params[:render_search], :viewing_context => params[:viewing_context], :parent_id=>parent_id, :parent_content_type=>parent_content_type), :method=>'post') do %>
  <%- if current_user -%>
    <h2 class="section-title">Add Child Component</h2>
    <dl>
      <dt><p>Child Type:</p></dt>
      <dd>
      <select name="label">
        <%- Component.child_types.each do |child_type| -%>
          <option><%=child_type.to_s%></option>
        <%- end -%>
      </select>
      <input type="submit" value="Add Child"/>
      </dd>
    </dl>
  <%- end -%>
<% end %>
