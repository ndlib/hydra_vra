<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"components", :content_type=>content)%>" method="post" data-resourceType="<%= content %>" accept-charset="utf-8">
  <fieldset id="work_fields">
    <legend> Item </legend>
      <input id="content_type" type="hidden" name="content_type" value="<%= content %>" />
    <dl>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :unittitle, :unittitle_label], "Display Title:") %>
      </dt>
      <dd class="display_title">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :unittitle, :unittitle_label], :multiple=>false) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :unittitle], "Title:") %>
      </dt>
      <dd class="title">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :unittitle], :multiple=>false) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :unitid], "ID:") %>
      </dt>
      <dd class="item_id">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :unitid])%>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :unittitle, :num], "Serial Number:") %>
      </dt>
      <dd class="serial_number">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :unittitle, :num]) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :origination, :signer, :persname_normal], "Display Signers:") %>
      </dt>
      <dd class="display_signers">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :origination, :signer, :persname_normal], :multiple=>true) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :origination, :signer], "Signers:") %>
      </dt>
      <dd class="signers">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :did, :origination, :signer], :multiple=>false) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :did, :physdesc, :dimensions], "Physical Description:") %>
      </dt>
      <dd id="physdesc">
        <%=fedora_text_area(document_fedora,"descMetadata", [:item, :did, :physdesc, :dimensions], :multiple=>true) %>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :controlaccess, :genreform], "Page Turn:")%>
      </dt>
      <dd id="page_turn">
        <%= fedora_text_area(document_fedora,"descMetadata", [:item, :controlaccess, :genreform])%>
      </dd>
      <dt>
        <%= fedora_field_label("descMetadata", [:item, :acqinfo], "Provenance:")%>
      </dt>
       <dd id="provenance">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :acqinfo])%>
      </dd>
	  <dt>
        <%= fedora_field_label("descMetadata", [:item, :odd], "Plate Letter:")%>
      </dt>
       <dd id="plate_letter">
        <%= fedora_text_area(document_fedora,"descMetadata", [:item, :odd])%>
      </dd>
	  <dt>
        <%= fedora_field_label("descMetadata", [:item, :scopecontent], "Description:")%>
      </dt>
       <dd id="description">
        <%= fedora_text_area(document_fedora,"descMetadata", [:item, :scopecontent])%>
      </dd>
<!--	  <dt>
        <%= fedora_field_label("descMetadata", [:item, :daogrp, :daoloc], "Images:")%>
      </dt>
       <dd id="images">
        <%= fedora_text_field(document_fedora,"descMetadata", [:item, :daogrp, :daoloc])%>
      </dd>
    </dl> -->
  </fieldset>
  
</form>
<form id="document_metadata" action="<%= url_for(:action=>"create", :controller=>"images_tag", :content_type=>content, :label => "image")%>" method="post" data-resourceType="<%= content %>" accept-charset="utf-8">
  <fieldset id="image_fields">
    <legend>Images</legend>
      <ol>
        <%= render :partial=>"images/edit_image_tag", :collection=>document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:item, :daogrp, :daoloc, :daoloc_href) %>
      </ol>
      <%# Button for adding image tag %>
      <% if params[:action] == "edit" %>
        <% format = document_partial_name(@document) %>
        <div id="add-image-box">
          <input id="re-run-add-image-action" type="button" value="Add Image Tag" />
        </div>
      <% end %>
  </fieldset>
</form>