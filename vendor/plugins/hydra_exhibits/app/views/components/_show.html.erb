<% javascript_includes << "/plugin_assets/fluid-infusion/infusion-1.2-src/lib/jquery/ui/js/jquery.ui.accordion.js" %>
<% javascript_includes << 'custom' %>
<% javascript_includes << "catalog/show" %>
<% javascript_includes << "fancybox/jquery.fancybox-1.3.1.pack.js" %>
<% javascript_includes << "generics_fancybox.js" %>
<% stylesheet_links << "../javascripts/fancybox/jquery.fancybox-1.3.1.css" %>

<style type="text/css" media="screen">
  input.editable-edit, input.textile-edit {display:none}
</style>

<div class="document_viewer" id="cover_container">

  <div id="accordion">
    <h2 class="section-title"><a href="#">Description</a></h2>
    <% if (!get_values_from_datastream(@document_fedora,"descMetadata", [:item]).first.empty?) %>
      <%= render :partial => "components/show_item", :locals => {:content_type => "component", :label => "item", :document_fedora => @document_fedora} %>
    <% else %>
      <%= render :partial => "components/show_subcollection", :locals => {:content_type => "component", :label => "subcollection", :document_fedora => @document_fedora} %>
    <% end %>
    <% if (!get_values_from_datastream(@document_fedora,"descMetadata", [:item]).first.empty?) %>
      <h2 class="section-title"><a href="#">Images</a></h2>
      <div id="childern">
        <%= render :partial => "components/pages", :locals => {:content => "component", :document_fedora => @document_fedora, :asset_id=>params[:id]} %>
      </div>
    <% else %>
<!--      <h2 class="section-title"><a href="#">Items</a></h2>
      <div id="childern">
        <%= render :partial => "components/items", :locals => {:content => "component", :document_fedora => @document_fedora, :asset_id=>params[:id]} %>
      </div> 
-->
    <% end %>
  </div>

</div>
