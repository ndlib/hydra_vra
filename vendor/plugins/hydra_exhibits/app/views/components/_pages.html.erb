<% childern = @document_fedora.list_childern(params[:id],"item") %>
<table>
<% if(childern.size > 0) %>
  <% childern.each {|child| %>
    <tr>

    <td>
      <%= link_to image_tag(child.datastream_url('thumbnail')), child.datastream_url('screen'), :title => child.name, :class => 'thumbnail' %>
      <!--<img src="<%#child.datastream_url('thumbnail')%>" heigth="100px" />-->
    </td>
    <td><%= link_to child.pid, catalog_path(child.pid) %><br/>
    <%= child.name %></td>
  <% } %>
<% end %>
</table>

