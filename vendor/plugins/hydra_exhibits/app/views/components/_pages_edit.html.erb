<% childern = @document_fedora.list_childern(params[:id],"item") %>
<table>
<% if(childern.size > 0) %>
  <% img_no = 0 %>
  <% childern.each {|child| %>
    <tr>
    <td>
      <%= link_to image_tag(child.datastream_url('thumbnail')), child.datastream_url('screen'), :title => child.name, :class => 'thumbnail' %>
    </td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to (child.title.nil? ? child.pid : child.title), page_path(child.pid, :exhibit_id => params[:exhibit_id], :render_search => params[:render_search], :f => params[:f], :viewing_context => params[:viewing_context]) %><br/>
    <%= child.name %></td>
    </tr>
    <tr>
	<td><a href='<%= url_for(:action => "delete_image", :controller => "components", :id => params[:id], :page_id => child.pid, :page_index => img_no, :exhibit_id => params[:exhibit_id], :render_search => params[:render_search], :f => params[:f], :viewing_context => params[:viewing_context]) %>' onclick="return confirm('Deleted Images cannot be recovered. Proceed with delete?')" >Delete this Image</a></td>
	<td></td>
    </tr>
    <tr><td></td><td></td></tr>
    <tr><td></td><td></td></tr>
    <% img_no = img_no + 1 %>
  <% } %>
<% end %>
</table>

