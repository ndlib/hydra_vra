<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"sub_exhibits", :content_type=>content)%>" method="post" data-resourceType="<%= content %>" accept-charset="utf-8" data-pid="<%= params[:id] %>" data-content-type="<%= content %>">
  <input id="update_url" type="hidden" name="url" value="<%= url_for(:action=>"update", :controller=>"sub_exhibits", :content_type=>content)%>" />
  <input id="update_embedded_search" type="hidden" name="search_url" value="<%= url_for(:action=>"update_embedded_search", :controller=>"exhibits", :content_type=>content, :f=>params[:f], :facet_selected=>params[:facet_selected], :exhibit_id=>params[:exhibit_id], :prev_action=>params[:action], :prev_controller=>params[:controller])%>" />
  <%= render :partial=>'shared/exhibit_title_header' %>
  <%= render :partial => "shared/edit_featured", :locals => {:content => content} %>
  <%= render :partial => "shared/edit_description", :locals => {:content => 'collection', :document_fedora => @document_fedora} %>  
</form>
