<% form_for([@collection, @genre_form]) do |f| %>
  <%= f.error_messages %>
    <fieldset>
      <dl>
        <dt>
          <%= f.label :collection_id, "Parent Collection" %>
        </dt>
        <dd>
          <%= f.collection_select :collection_id, Collection.all, :id, :name, { :prompt => true } %>
        </dd>
        <dt>
          <%= f.label :name %>
        </dt>
        <dd>
          <%= f.text_field :name %>
        </dd>
        <dt>
          <%= f.label :description %>
        </dt>
        <dd>
          <%= f.text_area :description %>
        </dd>
        <dt>
          <%= f.label :essay %>
        </dt>
        <dd>
          <%= f.text_area :essay, :class => 'huge' %>
        </dd>
      </dl>
      <%= f.submit 'Save' %>
    </fieldset>
<%- end -%>

<%= link_to 'Back', collection_genre_forms_path(@collection) %>
