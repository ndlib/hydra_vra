<div class="edit_setting">
  <fieldset id="work_fields2">
    <legend> Exhibit </legend>
      <input id="content_type" type="hidden" name="content_type" value="<%= content %>" />
    <dl>
      <dt>
        Title:
      </dt>
      <dd class="title">

      </dd>
      <dt>
        <%= fedora_field_label("filters", "facets", "Browse By Facets:") %>
      </dt>
      <dd id="browse_facets">
        <%=fedora_text_field(document_fedora,"filters", "facets", :multiple=>true) %>
        <%= fedora_text_field_insert_link "filters", :facets, :label=>"Browse Facet"%>
      </dd>
      <dt>
        <%= fedora_field_label("filters", "query", "Solr Queries:")%>
      </dt>
      <dd id="queries">
        <%= fedora_text_field(document_fedora,"filters", "query", :multiple=>true)%>
      </dd>
      <% unless get_values_from_datastream(document_fedora,"descMetadata", [:main_description]).first.empty?%>
          <dt class="main_description">
            <%= fedora_field_label("descMetadata", "main_description", "Main Description Title:")%>
          </dt>
          <dd>
             <%- document_fedora.descriptions.each do |item| -%>
                <%- if item.pid.eql?(get_values_from_datastream(document_fedora,"descMetadata", [:main_description]).first)-%>
                    <%= item.title%>
                 <%- end -%>
             <%- end -%>
          </dd>
      <%end%>
    </dl>
    <input id="exhibit_update_url" type="hidden" name="url" value="<%= url_for(:action=>"update_attributes", :controller=>"exhibits", :content_type=>content)%>" />
    <div id="add-main-essay-box">
        <input id="re-run-add-main-essay-action" type="button" value="Select Essay" />
        <button id="select-main-essay-type" type="button">Select main essay</button>
        <ul id="add-main-essay-menu">
        <%- document_fedora.descriptions.each do |item| -%>          
          <li class="essay" pid="<%= item.pid%>">
            <%= item.title%>
          </li>
        <%- end -%>
        </ul>
    </div>

    </fieldset>
  </div>




