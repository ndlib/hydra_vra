<div class="edit_setting">  
  <fieldset id="work_fields2">
    <legend> Exhibit </legend>
      <input id="content_type" type="hidden" name="content_type" value="<%= content %>" />
    <dl>
      <dt>
        Title:
      </dt>
      <dd class="title">

      </dd>
      <dt>
        <%= fedora_field_label("filters", "facets", "Browse Facets:") %>
      </dt>
      <dd id="browse_facets">
        <%=fedora_text_field(document_fedora, "filters", "facets", :multiple=>true) %>
        <%= fedora_text_field_insert_link "filters", :facets, :label=>"Browse Facets"%>
      </dd>
      <dt>
        <%= fedora_field_label("filters", "query", "Solr Queries:")%>
      </dt>
      <dd id="queries">
        <%= fedora_text_field(document_fedora,"filters", "query", :multiple=>true)%>        
      </dd>
      <%- unless document_fedora.collections.empty?-%>
         <dt class="collections">
            <label>Related Collections:</label>
         </dt>
         <dd class="collections">
           <%- document_fedora.collections.each do |collection| -%>
             <%= collection.title%>
             <a class="destructive remove_collections" pid="<%= collection.pid%>" href=# action="<%= remove_collection_exhibit_path(params[:id], :content_type=>content)%>" title="Remove Relation"> Delete Collection Relations</a>
           <%- end -%>
         </dd>
      <%-end-%>

      <% unless get_values_from_datastream(document_fedora,"descMetadata", [:main_description]).first.empty?%>
          <dt class="main_description">
            <%= fedora_field_label("descMetadata", "main_description", "Main Description Title:")%>
          </dt>
          <dd>
             <%- document_fedora.descriptions.each do |item| -%>
                <%- if item.pid.eql?(get_values_from_datastream(document_fedora,"descMetadata", [:main_description]).first)-%>
                    <%= item.title%>
                 <%- end -%>
             <%- end -%>
          </dd>
      <%end%>     
    </dl>
    <input id="exhibit_add_main_description_url" type="hidden" name="url" value="<%= url_for(:action=>"add_main_description", :controller=>"exhibits", :content_type=>content)%>" />
    <div id="add-main-description-box" class="split-button">
        <input id="re-run-add-main-description-action" type="button" class="button" value="Select Description" />
        <button id="select-main-description-type" type="button">Select main description</button>
        <ul id="add-main-description-menu">
        <%- document_fedora.descriptions.each do |item| -%>
          <li class="description" pid="<%= item.pid%>">
            <%= item.title%>
          </li>
        <%- end -%>
        </ul>
    </div>
    <%= get_collections(content,"active_fedora_model_s:Collection")%>

    </fieldset>
  </div>




