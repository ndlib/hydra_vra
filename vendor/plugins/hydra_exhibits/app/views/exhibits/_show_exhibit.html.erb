<h1>Exhibit Title</h1>

<span class="edit-browse">
  <% if editor? %>
    <%= edit_and_browse_exhibit_links(@exhibit) %>
  <% end -%>
</span>
<p>
  Description
</p>
<% @exhibit = exhibit if @exhibit.nil? && exhibit%>
<% if @exhibit.descriptions.length > 0 %>    
  <% @exhibit.descriptions.each do |description|%>
    <h3>Essay Title goes in here</h3>
    <%=load_essay(description) %>
    <%# #link_to "Essay: \"#{description.title}\"", essay_path(params[:collection_id], description.pid) description.introduction %>
    <%# link_to "[Read the complete essay]", essay_path(params[:collection_id], @essay.pid) %>
  <% end %>
<%- else -%>
  <h3><%= "Essay forthcoming..." %></h3>
<%- end -%>


<h2>Featured sources</h2>
<% if !@exhibit.nil? && @exhibit.highlighted.length > 0 %>
  <dl class="item-list">
    <%- @exhibit.highlighted.each do |item| -%>
    <dt><%= link_to truncate(item.pid, :length => 80), catalog_path(item) %></dt>    
    <%- end -%>
  </dl>
<%- else -%>
  <h3>No highlighted items defined</h3>
<%- end -%>

<hr />


<h2>Complete sources</h2>
<dl class="item-list"></dl>

<div class="pagination">
  <%= will_paginate @browse_response.docs, :page_links => false, :class => 'prev_next_links' %>
  <%= will_paginate @browse_response.docs, :container => false %>
</div>
<%= render :partial=>'sort_and_per_page', :locals => {:response=>@browse_response} if @browse_response.response['numFound'] > 10 %>

<%= render :partial=>'document_list', :locals => {:document_list=>@browse_document_list, :response=>@browse_response} %>

<div class="pagination">
  <%= will_paginate @browse_response.docs, :page_links => false, :class => 'prev_next_links' %>
  <%= will_paginate @browse_response.docs, :container => false%>
</div>
  <fieldset id="collection_fields">
    <legend> Exhibit </legend>
    <dl>
          <dt>
            <%= fedora_field_label("filters", "facets", "Browse By Facets:") %>
          </dt>
          <dd>
            <% tabs = 0 %>
            <% @exhibit.datastreams["filters"].facets_values.each do |solr_fname|%>
             <h2>
             <% for i in 0..tabs %>
               &nbsp;&nbsp;
             <% end %>
             -
             <% if facet_field_labels[solr_fname] %>
               <%=facet_field_labels[solr_fname]%>
             <% else %>
               <%=solr_fname%>
             <% end %>
             </h2>
             <% tabs += 1 %>
            <% end %>
          </dd>
          <dt>
            <%= fedora_field_label("filters", "query", "Exhibit Members Query:") %>
          </dt>
          <dd>
            <% @exhibit.query_values.each do |value|%>
             <h2> <%=value%></h2>
            <% end %>
          </dd>
    </dl>
  </fieldset>

  
  
