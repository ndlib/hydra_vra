<h1>Sub Collection Title</h1>
<%#debug @subset.inspect%>

<span class="edit-browse">
  <% if editor? %>
    <%= edit_and_browse_subcollection_links(@subset) %>
  <% end -%>
</span>
<% if !@subset.nil?%>
  <h3>Matched subset</h3>
<% else %>
  <h3>Did not match subset</h3>
<% end %>
<p>
  Description
</p>
<% if @descriptions.length > 0 %>    
  <% @descriptions.each do |description|%>
    <h3>Essay Title goes in here</h3>
    <%=load_essay(description) %>
    <%# #link_to "Essay: \"#{description.title}\"", essay_path(params[:collection_id], @essay.pid) description.introduction %>
    <%# link_to "[Read the complete essay]", essay_path(params[:collection_id], @essay.pid) %>
  <% end %>
<%- else -%>
  <h3><%= "Essay forthcoming..." %></h3>
<%- end -%>


<%# debug @subset.highlighted %>
<h2>Featured sources</h2>
<% if @subset.highlighted.length > 0 %>
  <dl class="item-list">
    <%- @subset.highlighted.each do |item| -%>
    <dt><%= link_to truncate(item.pid, :length => 80), catalog_path(item) %></dt>    
    <%- end -%>
  </dl>
<%- else -%>
  <h3>No highlighted items defined</h3>
<%- end -%>

<hr />


<h2>Complete sources</h2>
<dl class="item-list"></dl>

<div class="pagination">
  <%= will_paginate @response.docs, :page_links => false, :class => 'prev_next_links' %>
  <%= will_paginate @response.docs, :container => false %>
</div>

<%= render 'sort_and_per_page' if @response.response['numFound'] > 10 %>

