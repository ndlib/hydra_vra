<%- if display_thumnail( document ) -%>
  <div class="thumbnail-container">
    <%=link_to(image_tag(render_item_image( document)), catalog_path(document[:id],:counter => (counter + 1 + @response.params[:start].to_i)), {:method => :put})%>
  </div>
<%- end -%>
<p class="attributes">
  <% index_field_names.each do |solr_fname| -%>
    <% if document.get solr_fname %>
      <%# NOTE conditional punctuation would be more appropriately managed by a helper method or by extending SolrDocument -%>
      <%= "#{h truncate( document.get(solr_fname))}#{((solr_fname == "creator_t" || solr_fname == "actual_date_t") && !document.get(solr_fname).match(/\.$/)) ? '.' : ''}#{solr_fname == "geography_t" ? ':' : ''}" %>
    <% end -%>
  <% end -%>
</p>
<p class="description">
  <%= document.get("description_t") %>
</p>
